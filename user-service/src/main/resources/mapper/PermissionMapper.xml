<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.bit.userservice.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.bit.pojo.po.user.PermissionPO">
        <result column="user_id" property="userId"/>
        <result column="role_id" property="roleId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>

    <!-- 角色字典项结果映射 -->
    <resultMap id="RoleDictItemResultMap" type="cn.bit.pojo.po.user.RoleDictItem">
        <result column="role_id" property="roleId"/>
        <result column="role_code" property="roleCode"/>
        <result column="description" property="description"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        user_id, role_id, create_time, update_time, del_flag
    </sql>

    <!-- 根据用户ID查询权限角色信息（返回Set集合） -->
    <select id="selectPermissionByUserId" resultMap="RoleDictItemResultMap">
        SELECT
        dr.role_id,
        dr.role_code,
        dr.description
        FROM
        permission p
        JOIN
        dict_role dr ON p.role_id = dr.role_id
        WHERE
        p.user_id = #{userId}
        AND
        p.del_flag = 0
        GROUP BY
        dr.role_id, dr.role_code, dr.description
    </select>

</mapper>
